generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // Uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // Uses direct connection
}

model ScanHistory {
  id           String   @id @default(cuid())
  tokenAddress String
  chainId      String
  safetyScore  Int
  rawJson      String
  redFlags     String
  createdAt    DateTime @default(now())
  userIp       String?
  userId       String? // Clerk User ID
}

model User {
  id     String  @id @default(cuid())
  userId String  @unique // Clerk User ID
  email  String? @unique

  // Payment Fields (Helio)
  isPro          Boolean   @default(false)
  planType       String? // "MONTHLY", "LIFETIME"
  subscriptionId String? // Helio Subscription ID
  periodEnd      DateTime? // Expiration date for Monthly

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
